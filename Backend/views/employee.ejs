<!DOCTYPE html>
<html>

<head>
  <title>Timings</title>
  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
</head>

<body>
  <div class="rounded d-flex justify-content-center p-2">
    <h2>Employee Interface</h2>
  </div>
  <div class="rounded d-flex justify-content-center p-2">
    <div class="m-2" style="width: 400px">
      <h5 class="text-center ">The Bank Account Holders</h1>
    </div>
    
  </div>
  <div class="rounded d-flex justify-content-center">
    <div class="m-2" style="width: 800px">
        <table class="table table-striped table-hover">
          <thead>
            
            <tr>
              <th scope="col">Account Name</th>
              
            </tr>
          </thead>
          <tbody>
            <% users.forEach((users, index) => { %>  
            <tr>
                <td>
                  <%= users.firstname %> <%= users.lastname %>
                </td>
                <td>
                 <form method="post">
                  <% if (users.user_type_id == 1) { %> <!-- Only show button if not admin -->
                    <button type="submit" class="btn bg-light">View Accounts</button>
                  <% }else { %>
                     <label for="">Admin or Employee account</label> 
                    <% } %>
                  <input type="hidden" name="username" id="username" value="<%= users.username %>" hidden>
                  <input type="hidden"name="firstname" id="firstname" value="<%= users.firstname %>" hidden>
                  <input type="hidden"name="lastname" id="lastname" value="<%= users.lastname %>" hidden>
                </form>
                </td>
              </tr>
              <% }); %>
          </tbody>
        </table>
    </div>
   
  </div>

  <div class="rounded d-flex justify-content-center">
    <a href="/logout"><button type="button" class="btn btn-primary" onclick="window.location.href='/'">Logout</button></a>
  </div>
</body>

</html>