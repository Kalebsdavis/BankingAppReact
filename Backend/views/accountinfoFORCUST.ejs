<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enter Login</title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="font/bootstrap-icons.css">
    <script type="text/javascript" src="crypto-js.js"></script>
    <script>
    
    
    function checkpassword(event){

    const current_password = document.getElementById("current_password").value;
    const new_password = document.getElementById("new_password").value;
    let passwordValid = false;
    let message = "";
     // Check if current password is entered
     if (current_password === "") {
        message = "Please enter current password";
        passwordValid = false; // Mark as invalid
    } else {
        // If current password is provided, hash it with the salt
        let salt = document.getElementById("salt").value;
        let hashed = CryptoJS.SHA256(current_password + ":" + salt).toString(CryptoJS.enc.Hex);
        document.getElementById("hashedpassword").value = hashed;
    }
    if(current_password && new_password===""){
        message = "You did not enter a new password";
        passwordValid = false;
    }
    // Check if new password is the same as the current one
    else if (new_password === current_password) {
        message = "Current and new passwords cannot be the same";
        passwordValid = false; // Mark as invalid
    }
    else {
        passwordValid = true;
        let salt = document.getElementById("salt").value;
        let hashedNew = CryptoJS.SHA256(new_password + ":" + salt).toString(CryptoJS.enc.Hex);
        document.getElementById("hashedNew").value = hashedNew;
    }
    
    // If there's a validation issue, show the message and prevent form submission
    if (!passwordValid) {
        document.getElementById("message").innerHTML = message;
        document.getElementById("message").style.display = "block";  // Ensure message is visible
        event.preventDefault();  // Stop form submission
    }
        
            

        }

    </script>
</head>
<body>
    <div class="container-fluid vh-100" style="margin-top: 10px;">
    <div class="" style="margin-top: 100px;">
        <div class="rounded d-flex justify-content-center">
            <div class="col-md-7 col-sm-12 shadow-lg p-5 bg-light">
                <div class="text-center">
                    <h3 class="text-primary">
                        Account Info
                    </h3>
                    <form  method="post" onsubmit="checkpassword(event);">
                        <div class="p-4">
                            <div class="input-group mb-3">     
                                <span class="input-group-text bg-primary d-flex align-items-center">
                                    <p class="text-white mb-0">Name:</p>  
                                </span>
                                <input id="currentname" name="currentname" type="text" class="form-control" value="<%- locals.name %>">
                            </div>
                            
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary d-flex align-items-center">
                                    
                                    <p class="text-white">UserName:</p>
                                
                                </span>
                                <input readonly id="currentusername" name="currentusername" type="text" class="form-control" value="<%- locals.username %>">
                                
                                
                            </div>
                            <div>
                                <p id="message" class="text-danger" >
                                    <%- locals.message %>
                                </p>
                            </div>
                            
                                <div class="input-group mt-4">
                                    <span class="input-group-text bg-primary d-flex align-items-center"><p class="text-white">Enter Current Password:</p>
                                    </span>
                                    <input id="current_password"  type="password" class="form-control" autofocus="autofocus"  value="" >
    
                                </div>
                                <div>
                                    <p id="message" class="text-danger">
                                        <%- locals.message %>
                                    </p>
                                </div>
                                <input id="hashedpassword" type="password" name="hashedPassword"  class="form-control" autofocus="autofocus"  value="" hidden>
                                <div class="input-group mt-4">
                                    <span class="input-group-text bg-primary d-flex align-items-center"><p class="text-white">Enter New Password:</p>
                                    </span>
                                    <input id="new_password" name="new_password" type="password" class="form-control" autofocus="autofocus"  value="">
    
                                </div>
                                <div>
                                    <p id="message" class="text-danger">
                                        <%- locals.message %>
                                    </p>
                                </div>

                                <input type="hidden" id="username" name="username" value="">
                                <input type="hidden" id="salt" name="salt" value="<%- locals.salt %>">
                                <input type="hidden" id="hashedPassword" name="hashedPassword" value="">
                                <input type="hidden" id="hashedNew" name="hashedNew" value="">
                                
                                
                                   
                                    
                                    <div class="p-4">
                                        
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                        
                                </div>
                        
                               
                            
                            
                        </div>
                    </form>
                    

                </div>
            </div>
        </div>
    </div>
    </div>
</body>
</html>