<!DOCTYPE html>
<html>

<head>
  <title>Timings</title>
  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
</head>

<body>
    <div class="position-relative p-4" style="background-color: #338dff;" >
        <h2 class="text-center text-white">____ Bank</h2>
        <div class="position-absolute top-0 end-0 p-3">
          <a href="/logout" style="color: white; text-decoration: none; display: flex; justify-content: flex-start;">Logout</a>
            </div>
      </div>
  <div class="rounded d-flex justify-content-center p-2">
    <h2>Admin Interface</h2>
  </div>
  <div class="rounded d-flex justify-content-center p-2">
    <div class="m-2" style="width: 400px">
      <h5 class="text-center ">_____ Bank Account Holders</h1>
    </div>
    
  </div>
  <div class="rounded d-flex justify-content-center">
    <div class="m-2" style="width: 800px">
      
      <table class="table table-striped table-hover">
          <thead>
            
            <tr>
              <th scope="col">Account Name</th>
              <th scope="col">Account Type</th>
            </tr>
          </thead>
          
          <tbody>
            <% users.forEach((users, index) => { %>
              <tr>
                <td>
                 <%= users.firstname %> <%= users.lastname %> 
                </td>
                <td>
                  <%= users.user_type_id %>
                </td>
                <td>
                  <form method="post"  >
                  <input type="hidden" name="salt" id="salt" value="<%= users.salt %>" hidden>
                  <input type="hidden" name="username" id="username" value="<%= users.username %>" hidden>
                  <input type="hidden"name="firstname" id="firstname" value="<%= users.firstname %>" hidden>
                  <input type="hidden"name="lastname" id="lastname" value="<%= users.lastname %>" hidden>
                  <button type="submit" class="btn bg-light">edit account</button>
                </form></td>
              </tr>
              <% }); %>
          </tbody>
        </table>
    </div>
   
  </div>

  <div class="rounded d-flex justify-content-center">
    <button type="button" class="btn btn-primary" onclick="window.location.href='/'">Return to Main</button>
  </div>
  
</body>

</html>